# =============================================================================
# SERVER ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your values
# All variables are REQUIRED
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------

NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Authentication Secrets
# -----------------------------------------------------------------------------

# Generate secure secrets using: openssl rand -base64 32
AUTH_SECRET_USER=change-this-to-a-secure-random-string-minimum-32-characters

# -----------------------------------------------------------------------------
# Security & CORS Configuration
# -----------------------------------------------------------------------------

CORS_ORIGINS=http://127.0.0.1:5173,http://localhost:5173,taskflow://,exp://10.180.183.118:8081
TRUSTED_ORIGINS=http://127.0.0.1:5173,http://localhost:5173,taskflow://,exp://10.180.183.118:8081


# MongoDB (Atlas) connection
# Example format (Atlas): mongodb+srv://YOUR_USERNAME:<PASSWORD>@cluster0.abcd.mongodb.net
# You must put "<PASSWORD>" placeholder 
MONGODB_URI=mongodb+srv://YOUR_USERNAME:<PASSWORD>@cluster0.abcd.mongodb.net
MONGO_PASSWORD=YOUR_PASSWORD

# Optional: explicitly select DB name (recommended)
MONGODB_DB_NAME=TASKFLOW